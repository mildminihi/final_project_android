<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:id="@+id/drawertimer"
    tools:context="wanroj.supanat.pomodoro_knight.Controller.TimerActivity">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Name of Task"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTask"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="72dp"
        android:background="@color/colorPrimaryDark"
        android:text="3:0"
        android:textColor="@color/cardview_light_background"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTask" />

    <Button
        android:id="@+id/buttonPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonStop_Start"
        android:layout_alignBottom="@+id/buttonStop_Start"
        android:layout_marginTop="8dp"
        android:background="#771C00"
        android:onClick="onPause"
        android:text="Pause"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="@+id/buttonStop_Start"
        app:layout_constraintStart_toEndOf="@+id/buttonStop_Start"
        app:layout_constraintTop_toTopOf="@+id/buttonStop_Start"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonStop_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTimer"

        android:layout_marginTop="52dp"
        android:background="#771C00"
        android:onClick="onS"
        android:text="Start"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimer" />

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="1/10"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStop_Start" />

</android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
